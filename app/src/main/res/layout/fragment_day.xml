<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cover"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@color/oldgreen">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/bear" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@color/oldgreen">


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:background="@drawable/board">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:src="@drawable/money_bag"/>

            <com.pinbook.planme.AutoResizeTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Board"
                android:textColor="@color/blackblue"
                android:textSize="24sp" />
        </FrameLayout>



    </LinearLayout>


    <ListView
        android:id="@+id/listViewActivity"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/topLayout"
        android:layout_weight="20"></ListView>

   <!-- <LinearLayout
        android:id="@+id/totalLayout"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="@color/blackblue">

        <com.pinbook.planme.AutoResizeTextView
            android:id="@+id/total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
    -->

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="@color/blackblue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addition"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:src="@drawable/add_file_white" />

        <com.pinbook.planme.AutoResizeTextView
            android:id="@+id/total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:padding="@dimen/activity_vertical_margin"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>